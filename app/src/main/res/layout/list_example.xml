<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/bigLinear"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_margin="5dp"

        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginTop="22dp">

            <ImageView
                android:id="@+id/foodPicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/pizza_picture" />


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/typeOfFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Pizza"
                android:textColor="#fff000"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/foodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="#D3CECA"
                android:text="Spicy chicken Pizza"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/foodPrize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="R.S 310.00"
                android:textColor="#00FF0D"
                android:textSize="25sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>